<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:H.Skeepy.Playbox.TesterApp"
      x:Class="H.Skeepy.Playbox.TesterApp.Home"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="Skeepy - Home">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Welcome to SKeepy" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" FontStyle="Italic">
            <Label.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.65"/>
            </Label.Effect>
        </Label>
        <Button Grid.Row="1" Content="First, let's define a clash" HorizontalAlignment="Center" VerticalAlignment="Center" IsDefault="True" FontWeight="Bold" FontSize="18" Margin="0" Padding="20,10" BorderThickness="1" Cursor="Hand" Click="NavigateToDefineClash_Click"/>
    </Grid>
</Page>
