<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:H.Skeepy.Playbox.TesterApp"
             xmlns:ViewModel="clr-namespace:H.Skeepy.Playbox.TesterApp.ViewModel" x:Class="H.Skeepy.Playbox.TesterApp.PartyViewer"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="300" Height="70">
    <Grid Height="70">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Content="{Binding Path=Party.Name, FallbackValue=Party}" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center" Grid.Row="0" FontSize="16">
            <Label.Effect>
                <DropShadowEffect ShadowDepth="0" RenderingBias="Quality" BlurRadius="3" Opacity="0.5"/>
            </Label.Effect>
        </Label>
        <Rectangle Grid.Row="1" Height="1" VerticalAlignment="Bottom" Stroke="Black" Opacity="0.35" />
        <Label Content="{Binding Path=Members, FallbackValue=Members}" HorizontalAlignment="Left" Margin="2" Grid.Row="1" VerticalAlignment="Center" FontSize="9"/>
    </Grid>
</UserControl>
